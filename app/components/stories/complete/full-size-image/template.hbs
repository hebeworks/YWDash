{{#stories/story-base 
    title="" 
    subTitle="" 
    color="-transparent" 
    width=width 
    height=height 
    data-ss-colspan="2"
    viewOnly=true
    hideTitles=true}}
    
    {{#if url}}
        <a href="{{url}}" target="_blank" class="full-size-image" style="background-image:url({{image}});"></a>
    {{else}}
        <div class="full-size-image" style="background-image:url({{image}});"></div>
    {{/if}}
{{/stories/story-base}}