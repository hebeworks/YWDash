  gopt_zoomControl=false
            markerInfoWindowTemplateName='app/components/stories/complete/bicycle-bays/google-map-info-window/'
            markerInfoWindowTemplateName='google-maps/info-window'
            }}-->
            
    </main>

{{/stories/story-base}}
