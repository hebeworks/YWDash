
{{#stories/story-base 
	title=title 
	subTitle=subTitle 
	color="-black" 
	width="-w2" 
	height="-h2" 
	data-ss-colspan="2"
	headerBorder=true

    dataSourceUrl=""
    feedbackEmail="simon@hebeworks.com"
    description=""
    license="Open Government License"
    author="Simon Zimmerman"
}}

    <main class="council-spending">
        <div class="select2-wrapper -select2-wide">
            {{
                select-2
                content=items
                value=selectedItem
                optionLabelPath="directorate"
                placeholder="Directorate values"
            }}
        </div><!--
        --><div class="select2-wrapper -select2-small -select2-calendar">
            {{
                select-2
                content=items
                value=selectedItem
                optionLabelPath="date"
                placeholder="Date"
            }}
        </div>
        <div class="story__half council-spending__circle-indicator">
            <h2 class="gamma bold center uppercase margin-bottom">Total spend for directorate</h2>
            <div class="circle-indicator -medium">
                <div class="svg-circle-indicator -orange" data-grunticon-embed></div>
                <div class="circle-indicator-ring -medium">
                    <div>
                        <span class="gamma helvbold block">January</span><span class="number-stat bold -orange block">&pound;245,675</span>
                        <span class="gamma helvbold block">Budget</span><span class="number-stat helvbold -orange block">&pound;473,704</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="story__half council-spending__circle-indicator">
            <h2 class="gamma bold center uppercase margin-bottom">Vs. Total spend<br />for month</h2>
            <div class="circle-indicator -medium">
                <div class="svg-circle-indicator -transparent" data-grunticon-embed></div>
                <div class="circle-indicator-ring -medium">
                    <div>
                        <span class="gamma helvbold block">January</span><span class="number-stat helvbold -lime block">&pound;8,473,704</span>
                    </div>
                </div>
            </div>
        </div>
    </main>
{{/stories/story-base}}
