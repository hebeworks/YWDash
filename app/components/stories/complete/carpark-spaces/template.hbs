{{#stories/story-base title=title subTitle=subTitle color="-light-blue" width="-w2" height="-h2" data-ss-colspan="2"}}
<main class="carpark-spaces">
    <div>
        {{
            select-2
            content=items
            value=selectedCarPark
            optionValuePath="id"
            optionLabelPath="title"
            placeholder="Choose a carpark"
        }}

        <!--optionDescriptionPath="title"-->
        <!--optionLabelPath="title"-->
    </div>

    {{#if selectedCarPark}}
    <div class="car-park">
        <h2 class="heading">{{currentCarPark.title}}</h2>
        <div class="car-park__capacity">
                {{currentCarPark.totalCapacity}}
                <div class="car-park__label">Spaces available</div>
        </div>
        <div class="car-park__occupied">
            {{currentCarPark.occupiedSpaces}}
            <div class="car-park__label">Occupied spaces</div>
        </div>
        <div class="car-park__available">
            {{currentCarPark.available}}
        </div>
    </div>
    {{else}}
        {{loading-icon}}
    {{/if}}
</main>
{{/stories/story-base}}
