{{#stories/story-base 
    title="Leeds Inspired" 
    subTitle="Music & art events around Leeds." 
    color="-ivory" 
    width="-w2" 
    height="-h2" 
    data-ss-colspan="2"
    dataSourceUrl="http://api.leedsinspired.co.uk"
    feedbackEmail="nathan@hebeworks.com"
    description="This Story uses data from the Leeds Inspired API"
    license="Open Government License"
    author="Nathan Smith"
    }}
    {{#stories/story-slider loaded=loaded}}
        {{#each item in items}}
            {{#stories/story-slide}}
            <main class="leeds-inspired-event">
                <div class="image">
                    <a href="javascript:;" style="background-image: url({{item.thumbnail}});" title="{{item.title}}">Image</a>
                </div>
                <h2 class="leeds-inspired-event__heading"><a href="javascript:;">{{item.title}}</a></h2>
                {{!-- <div class="leeds-inspired-event__description">{{item.description}}</div> --}}
                <div class="leeds-inspired-event__details">
                    <div class="dotted-area -top -pad-top -pad-bottom">
                        <time class="leeds-inspired-event__datetime">{{item.date}}</time>
                    </div>
                    <div class="dotted-area -top -pad-top -pad-bottom">
                        <div class="leeds-inspired-event__address">
                        <em>{{item.place}}</em></div>
                    </div>
                </div>
            </main>
            {{/stories/story-slide}}
        {{/each}}
    {{/stories/story-slider}}
    {{yield}}    
{{/stories/story-base}}
