{{#stories/story-base 
    title=title 
    subTitle=subTitle 
    color="-black" 
    width="-w2" 
    height="-h2" 
    data-ss-colspan="2"
    
    dataSourceUrl="http://leedsdatamill.org/dataset/leeds-city-centre-footfall-data"
    feedbackEmail="joel@hebeworks.com"
    description="This Story uses City Centre Footfall data from Leeds Data Mill."
    license="Open Government License"
    author="Joel Mercer"
}}
<main class="foi-request">
    
    <div>
        {{
            select-2
            content=items
            value=selectedItem
            optionLabelPath="street"
            placeholder="Find a bay"
        }}
    </div>
    
    <div class="headline-figures">
        <strong>FOI</strong> &amp; <strong>EIR</strong> Requests received <span class="headline-figure__value"></span>
    </div>
    
    <div class="response-times">
        <div class="response-times__section svg-foi-timer">Response timer icon</div>
        <div class="response-times__section">Within <strong>20 days</strong> <span class="response-times__value">80%</span></div>
        <div class="response-times__section">Over <strong>20 days</strong> <span class="response-times__value">10%</span></div>
    </div>
    
    <aside class="disclosure-stats">
        <div class="dotted-area -right -pad-right">
            <p>Full Disclosure<br /><span class="disclosure-stat__stat">49</span></p>
        </div>
            <div class="dotted-area -pad-left -pad-right">
            <p>Partial Disclosure<br /><span class="disclosure-stat__stat">15</span></p>
        </div>
            <div class="dotted-area -left -pad-left">
            <p>Withheld<br /><span class="disclosure-stat__stat">7</span></p>
        </div>
    </aside>
</main>
{{/stories/story-base}}