<div class="stat-notice">
	<div class="stat-notice__section -two-thirds">
    <div class="btn -red svg-stat-notices-icon-planning">
	    <span class="v-align--middle text--center">
	        Planning
	    </span>
		</div>
		<div class="stat-notice__proposal dotted-area -top -bottom -pad-top -pad-bottom -dark">
			<h2 class="-alpha">{{model.proposal}}</h2>
		</div>
		<p class="stat-notice__description dotted-area -dark -bottom -pad-top -pad-bottom">{{model.proposalDetails}}</p>
		<div class="stat-notice__map">
		        {{google-map 
		            lat=model.lat 
		            lng=model.lng 
		            zoom=15
					markers=model.markers
		            gopt_zoomControl=true
		            gopt_mapTypeControl=true
	            }}
	            {{!-- gopt_styles=mapStyle --}}
		</div>
		<div class="stat-notice__section -full">
			<div class="stat-notice__section -half">
				<div class="stat-notice__address solid-area -all -rounded -dark">
					<div class="icon solid-area -right -dark svg-stat-notice-icon-location-pin"></div>
					<p class="-pad-all">{{{model.fullAddress}}}</p>
				</div>
				<div class="stat-notice__contribute solid-area -all -rounded -dark">
					<div class="icon solid-area -right -dark svg-stat-notice-icon-document"></div>
					<p class="-pad-all">Is this information correct?</p>
				</div>
			</div>
			<div class="stat-notice__section -half">
				<div class="stat-notice__sign-off -pad-top">
					<h3 class="-beta solid-area -bottom -dark -pad-bottom">Sign-off</h3>
					<h4 class="-delta">{{model.signOffName}}</h4>
					<p>{{model.signOffDetails}}</p>
				</div>
				<div class="btn-list -borderless">
					<button class="btn -half svg-stat-notices-icon-phone" data-grunticon-embed>Phone</button>
					{{#if model.objectionEmail}}
						<a href="mailto:{{model.objectionEmail}}" class="btn -half svg-stat-notices-icon-email" data-grunticon-embed>Email</a>
					{{/if}}
				</div>
			</div>
		</div>
	</div>
	<div class="stat-notice__section -one-third">
		<div class=""></div>
	</div>
	{{yield}}
</div>
