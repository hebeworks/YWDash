<header class="site-header">
    {{#link-to 'index' class="site-logo"}}<small>Powered by:</small><span>{{siteTitle}}</span>{{/link-to}}
    <ul class="site-nav">
        {{#each item in navItems}}
            <li style="float:left">
                <a class="top-nav--item" {{action "gotoRoute" item.route}}>{{item.title}}</a>
            </li>
        {{/each}}
    </ul>
</header>
