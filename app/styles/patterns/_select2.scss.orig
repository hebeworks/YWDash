	border: 0;
}

.-white {
	.select2-container {
		.select2-choice, {
			background-color: $light-grey;
			.select2-chosen {
				background-color: $light-grey;
				color: $black;
			}
			.select2-arrow {
				background-color: $light-grey;
				color: $black;
			}
		}
	}
}

.-black {
	.select2-container {
		.select2-choice, {
			background-color: lighten($black,15);
			.select2-chosen {
				background-color: lighten($black,15);
				color: $white;
			}
			.select2-arrow {
				background-color: lighten($black,15);
				color: $white;
			}
		}
	}
}

